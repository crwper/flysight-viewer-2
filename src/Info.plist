<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Bundle identification -->
    <key>CFBundleIdentifier</key>
    <string>com.flysight.viewer</string>

    <key>CFBundleName</key>
    <string>FlySight Viewer</string>

    <key>CFBundleDisplayName</key>
    <string>FlySight Viewer</string>

    <!-- Version information -->
    <key>CFBundleShortVersionString</key>
    <string>@PROJECT_VERSION@</string>

    <key>CFBundleVersion</key>
    <string>@PROJECT_VERSION@</string>

    <!-- Executable and package type -->
    <key>CFBundleExecutable</key>
    <string>FlySightViewer</string>

    <key>CFBundlePackageType</key>
    <string>APPL</string>

    <!-- Icon -->
    <key>CFBundleIconFile</key>
    <string>FlySightViewer.icns</string>

    <!-- Info string -->
    <key>CFBundleGetInfoString</key>
    <string>FlySight Viewer @PROJECT_VERSION@, GPS Flight Data Analysis</string>

    <!-- High resolution support -->
    <key>NSHighResolutionCapable</key>
    <true/>

    <!-- Supported platforms -->
    <key>LSMinimumSystemVersion</key>
    <string>10.15</string>

    <!-- File associations -->
    <key>CFBundleDocumentTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeName</key>
            <string>FlySight Track File</string>
            <key>CFBundleTypeRole</key>
            <string>Viewer</string>
            <key>LSHandlerRank</key>
            <string>Owner</string>
            <key>CFBundleTypeExtensions</key>
            <array>
                <string>csv</string>
            </array>
        </dict>
    </array>

    <!-- Application category -->
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.utilities</string>

    <!-- Copyright -->
    <key>NSHumanReadableCopyright</key>
    <string>Copyright 2024 FlySight. All rights reserved.</string>

    <!-- Environment for Python -->
    <key>LSEnvironment</key>
    <dict>
        <key>PYTHONDONTWRITEBYTECODE</key>
        <string>1</string>
    </dict>
</dict>
</plist>
